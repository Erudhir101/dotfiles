{
  "vim_mode": true,
  "auto_install_extensions": {
    "html": true,
    "svelte": true,
    "catppuccin": true
  },
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_size": 18,
  "close_on_file_delete": true,
  "confirm_quit": true,
  "current_line_highlight": "line",
  "cursor_blink": false,
  "hide_mouse": "on_typing",
  "scrollbar": {
    "show": "never"
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 75
    }
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "dark": "Tokyo Night",
    "light": "Catppuccin Latte"
  },

  "languages": {
    "JavaScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  }
}
